<resources>
    <!-- Base application theme. -->
    <style name="Theme.EasyNoise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="Theme.EasyNoise.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.EasyNoise.AppWidgetContainer" parent="Theme.EasyNoise.AppWidgetContainerParent" />
</resources>
